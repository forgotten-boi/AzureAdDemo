@model IEnumerable<PocAadClient.Models.Weather>

@{
    ViewBag.Title = "To Do List";
}

<h3>Add an Item</h3>

@if (ViewBag.ErrorMessage == null)
{
    <form name="input"  method="post">
        New Item: <input type="text" name="item">
        <input type="submit" value="Submit">
    </form>
}

<table class="table table-bordered table-striped">

    <tr>
        <th>Summary</th>
        <th>Temperature</th>
        <th>DateFormatted</th>
    </tr>

    @foreach (var i in Model)
    {
        <tr>
            <td>@i.Summary</td>
            <td>@i.TemperatureC</td>
            <td>@i.DateFormatted</td>
        </tr>
    }

</table>

@if (ViewBag.ErrorMessage == "AuthorizationRequired")
{
    <p>You have to sign-in to see your to do list. Click @Html.ActionLink("here", "Index", "Weather", new { reauth = true }, null) to sign-in.</p>

}

@if (ViewBag.ErrorMessage == "UnexpectedError")
{
    <p>An unexpected error occurred while retrieving your to do list.  Please try again.  You may need to sign-in.</p>
}

